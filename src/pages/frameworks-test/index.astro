---
import Layout from 'src/layouts/Layout.astro';
import SvelteCounter from 'src/components-svelte/SvelteCounter.svelte';
import QwikCounter from 'src/components-qwik/QwikCounter';
import SolidCounter from 'src/components-solid/SolidCounter';
---

<Layout title="Frameworks Test">
  <main>
    <h1>Multi-Framework Test Page</h1>
    <p>Testing Svelte, Qwik, and SolidJS components working together in Astro!</p>
    
    <SvelteCounter client:only="svelte" />
    
    <QwikCounter />

    <SolidCounter client:only="solid-js" />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: 60ch;
  }
  
  h1 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1em;
  }
  
  p {
    margin-bottom: 2rem;
  }
  
  :global(.counter-container) {
    padding: 1rem;
    border-radius: 8px;
    margin: 1rem 0;
    text-align: center;
  }
  
  :global(.counter-display) {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }
  
  :global(.btn) {
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1.2rem;
  }
  
  :global(.count) {
    font-size: 1.5rem;
    min-width: 2rem;
  }
  
  :global(.qwik-counter) {
    border: 2px solid #0093ee;
  }
  
  :global(.qwik-counter .btn) {
    background-color: #0093ee;
  }
  
  :global(.qwik-counter .btn:hover) {
    background-color: #0078c7;
  }
  
  :global(.solid-counter) {
    border: 2px solid #2c4f7c;
  }
  
  :global(.solid-counter .btn) {
    background-color: #2c4f7c;
  }
  
  :global(.solid-counter .btn:hover) {
    background-color: #1e3a5f;
  }
</style>