      <span class="text-purple-400">return</span> <span class="text-cyan-300">created</span>;
	{"})"};

    <span class="text-purple-400">await</span> <span class="text-cyan-300">eventBus</span>.<span class="text-green-400">emit</span>(<span class="text-red-300">'user.created'</span>, <span class="text-cyan-300">user</span>);
    <span class="text-purple-400">return</span> <span class="text-cyan-300">user</span>;
  {"}"}
{"}"}</code></pre>
